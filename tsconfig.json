{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
  },
  "include": [
    "src/*.ts",
    "types/*.ts"
  ],
  "exclude": ["node_modules/"]
}
